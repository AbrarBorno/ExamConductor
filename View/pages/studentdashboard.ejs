<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <title>Dashboard</title>

    <link rel="stylesheet" href="/static/css/bootstrap.min.css" />
    <meta name="theme-color" content="#7952b3" />

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
      html {
        height: 100%;
      }
      body {
        padding-top: 56px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .scrolldiv {
        max-height: 287px;
        overflow: auto;
        width: 700px;
      }
      td > a {
        text-decoration: none;
      }
      .hlink {
        border: 0;
        border-radius: 5px;
        background-color: #3e4347;
      }
      .olink {
        border: 0;
        border-radius: 5px;
        background-color: #813d3d;
        margin-left: 10px;
      }
      #welcome {
        color: white;
      }
      .sense {
        width: 100%;
        background-color: rgb(230, 230, 230);
        border-radius: 8px;
        padding-left: 30px;
        padding-right: 30px;
        padding-top: 30px;
        padding-bottom: 30px;
      }
      .sense > p {
          text-align: center;
          font-size: 30px;
          font-weight: bold;
          font-family: "Verdana";
          color: rgb(136, 136, 136);
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="container-fluid">
        <span class="navbar-brand">Dashboard</span>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item">
              <a class="nav-link active hlink" aria-current="page" href="/board">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active olink" aria-current="page" href="/logout">Logout</a>
            </li>
          </ul>
          <span id="welcome">Welcome, <%= `${user.firstName} ${user.lastName}` %></span>
        </div>
      </div>
    </nav>
    <div>
    <% if (history.length > 0) { %>
      <div class="table-wrapper-scroll-y my-custom-scrollbar scrolldiv">
        <table class="table table-bordered table-striped mb-0">
          <thead>
            <tr>
              <th scope="col">Exam Name</th>
              <th scope="col">Due</th>
              <th scope="col">Exam Link</th>
            </tr>
          </thead>
          <tbody>
          <% for( let i = 0; i < history.length; i++ ) { %>
            <tr>
              <td><%= history[i].name %></td>
              <td><%= history[i].due %></td>
              <td><a href="/exam?id=<%= history[i].id %>" target="_blank"><%= history[i].ended ? 'open (results available) ➤' : 'open ➤' %></a></td>
            </tr>
          <% } %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="sense">
        <p>The exams you've attempted will appear here</p>
      </div>
    <% } %>
    </div>
    <script src="/static/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/jquery-3.6.0.min.js"></script>
  </body>
</html>
